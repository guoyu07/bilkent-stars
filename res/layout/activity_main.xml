<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
	xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
	xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
	android:id="@+id/login_screen"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	 >

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical" 
          android:layout_centerHorizontal="true"
  		  android:layout_centerVertical="true"
  		  android:layout_marginLeft="30dp"
  		  android:layout_marginRight="30dp"
  		  android:weightSum="1"
  		  android:gravity="center"
          >

          <ImageView
              android:id="@+id/imageView1"
              android:layout_weight="0.5"
              android:layout_width="fill_parent"  
              android:layout_height="0dip"
              android:src="@drawable/bilkent_logo" android:contentDescription="TODO"/>

          <com.beardedhen.androidbootstrap.BootstrapEditText
              android:id="@+id/stars_id"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:gravity="center"
              android:hint="Student ID"
              android:textSize="20sp"
              android:inputType="number"
              bootstrapbutton:be_roundedCorners="true"
				/>

          <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/stars_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Password" 
            android:textSize="20sp"
            android:inputType="textPassword"
            bootstrapbutton:be_roundedCorners="true"
            android:gravity="center"
		  />
          <com.beardedhen.androidbootstrap.BootstrapButton
				android:id="@+id/login_button"
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:text="@string/login"
				bootstrapbutton:bb_icon_left="fa-check"
				bootstrapbutton:bb_roundedCorners="true"
				bootstrapbutton:bb_type="success"
    	   />
           <LinearLayout 
	          android:gravity="center"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:id="@+id/loading_layout"
	          android:visibility="invisible"
	          android:orientation="vertical"
	          >
	          <com.beardedhen.androidbootstrap.FontAwesomeText
               		android:id="@+id/loading_gif"
                	android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="32sp"
                    fontawesometext:fa_icon="fa-spinner" 
                    android:textColor="@color/bbutton_primary"
	           />
	           <TextView
	               android:layout_marginTop="-10dp"
	               android:text="Logging in"
	               android:textStyle="bold"
	               android:textColor="@color/bbutton_primary"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content" />
	       </LinearLayout>
      </LinearLayout>
      <LinearLayout 
          android:gravity="bottom"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          >
          <com.beardedhen.androidbootstrap.FontAwesomeText
                	android:id="@+id/info_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="32sp"
                    fontawesometext:fa_icon="fa-info-circle" 
                    android:textColor="@color/bbutton_warning"
                    android:layout_gravity="bottom|right"
                    />
      </LinearLayout>  
</RelativeLayout>
